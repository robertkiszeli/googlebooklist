<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/list_item_margin"
    android:elevation="@dimen/list_item_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/search_list_item_book_image"
            android:layout_width="@dimen/list_item_image_width"
            android:layout_height="@dimen/list_item_image_height"
            android:layout_margin="@dimen/list_item_image_margin"
            android:background="@drawable/noimage"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/list_item_text_layout_margin">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/search_list_item_book_author"
                style="@style/list_item_text"
                android:layout_alignParentTop="true" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/search_list_item_book_published_date"
                style="@style/list_item_text"
                android:layout_alignParentBottom="true" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/search_list_item_book_title"
                style="@style/list_item_text"
                android:layout_above="@+id/search_list_item_book_published_date"
                android:layout_below="@+id/search_list_item_book_author"
                android:maxLength="50" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>