<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDivider"
    android:orientation="vertical"
    tools:context="com.robertkiszelirk.googlebooksearch.MainActivity">

    <android.support.v7.widget.ListViewCompat
        android:id="@+id/search_result_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/search_result_list_view_margin"
        android:layout_weight="9"
        android:dividerHeight="@dimen/search_result_list_view_divider_height"
        android:visibility="gone"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/empty_search_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/empty_search_result_text_size"
        android:textColor="@color/colorTextPrimary"
        android:text="@string/no_result_for_your_search"
        android:visibility="gone"/>

</LinearLayout>